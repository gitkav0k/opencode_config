{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "ask",
    "doom_loop": "deny",
    "external_directory": "deny"
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b": {
          "tools": true,
          "reasoning": true
        },
        "gpt-oss:120b": {
          "tools": true,
          "reasoning": true
        },
        "deepseek-r1:70b": {
          "tools": true,
          "reasoning": true
        },
        "qwen3:32b": {
          "tools": true,
          "reasoning": true
        },
        "llama3.1:70b": {
          "tools": true,
          "reasoning": false
        },
        "qwen3-coder:30b": {
          "tools": true,
          "reasoning": false
        },
        "gemma3:27b": {
          "tools": true,
          "reasoning": false
        }
      }
    }
  }
}
